<Window x:Class="DemoReference.Views.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoReference.Views"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            
            <Label>First Name:</Label>
            <TextBox x:Name="tbFName"/>
            
            <Label>Second Name</Label>
            <TextBox x:Name="tbSName"/>
            
            <Label>Patronymic</Label>
            <TextBox x:Name="tbPatronymic"/>

            <Button Content="Add" Margin="0, 15" Click="Add_Click"/>

        </StackPanel>
    </Grid>
</Window>
