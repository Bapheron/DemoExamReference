<Window x:Class="DemoReference.Views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoReference.Views"
        mc:Ignorable="d"
        Title="AdminMainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="myDataGrid" ItemsSource="{Binding BuilderJobDutiesCollection}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="Builder" Binding="{Binding Builder.SecondName}" Width="100"/>
                <DataGridTextColumn Header="Duties" Binding="{Binding JobDuties.Name}" Width="110"/>
                <DataGridTextColumn Header="Administrator" Binding="{Binding User.Login}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Button Content="Add Builder" Width="100" Click="ToAddPage_Click"/>
            <Button Content="Change" Width="100" Margin="15, 0" Click="ToChangePage_Click"/>
            <Button Content="Delete" Width="100" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
