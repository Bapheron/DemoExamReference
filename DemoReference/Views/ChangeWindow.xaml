<Window x:Class="DemoReference.Views.ChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoReference.Views"
        mc:Ignorable="d"
        Title="ChangeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <Label>Builder</Label>
            <ComboBox x:Name="cbBuilders"/>

            <Label>Job Duties</Label>
            <ComboBox x:Name="cbDuties"/>

            <Button Content="Change" Margin="0, 15" Click="Change_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
